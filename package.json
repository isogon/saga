{
  "name": "sagajs",
  "version": "0.0.1",
  "description": "A simple generic library to help in writing sagas",
  "main": "build/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register --require test/helper.js test/**/*.spec.js",
    "lint": "npm run lint:tests && npm run lint:src",
    "lint:src": "eslint --config .eslintrc.src src/**",
    "lint:tests": "eslint --config .eslintrc.test test/**",
    "build": "rimraf build dist && npm run build-node && mkdirp dist && npm run build-browser && npm run build-minify",
    "build-browser": "browserify build/index.js --standalone saga --outfile dist/saga.bundle.js",
    "build-minify": "uglifyjs dist/saga.bundle.js --compress --output dist/saga.bundle.min.js",
    "build-node": "babel src --out-dir build"
  },
  "keywords": [
    "saga"
  ],
  "author": "Kegan Myers <kegan@keganmyers.com>",
  "license": "ISC",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "bluebird": "^3.4.6"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-preset-es2015": "^6.14.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "eslint": "^3.5.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.7.3"
  }
}
